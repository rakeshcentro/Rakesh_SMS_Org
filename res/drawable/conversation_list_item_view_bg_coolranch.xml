<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <inset android:insetLeft="@dimen/conversation_list_item_view_background_right_left_inset_coolranch" android:insetRight="@dimen/conversation_list_item_view_background_right_left_inset_coolranch" android:insetTop="@dimen/conversation_list_item_view_background_top_bottom_inset" android:insetBottom="@dimen/conversation_list_item_view_background_top_bottom_inset">
            <shape>
                <corners android:topLeftRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:topRightRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:bottomLeftRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:bottomRightRadius="@dimen/conversation_list_item_view_background_radius_coolranch" />
                <solid android:color="?colorSelectionSurface" />
            </shape>
        </inset>
    </item>
    <item android:state_activated="true">
        <inset android:insetLeft="@dimen/conversation_list_item_view_background_right_left_inset_coolranch" android:insetRight="@dimen/conversation_list_item_view_background_right_left_inset_coolranch" android:insetTop="@dimen/conversation_list_item_view_background_top_bottom_inset" android:insetBottom="@dimen/conversation_list_item_view_background_top_bottom_inset">
            <shape>
                <corners android:topLeftRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:topRightRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:bottomLeftRadius="@dimen/conversation_list_item_view_background_radius_coolranch" android:bottomRightRadius="@dimen/conversation_list_item_view_background_radius_coolranch" />
                <solid android:color="?colorOnSurfaceInverse" />
            </shape>
        </inset>
    </item>
    <item android:state_activated="false">
        <color android:color="?android:windowBackground" />
    </item>
</selector>
